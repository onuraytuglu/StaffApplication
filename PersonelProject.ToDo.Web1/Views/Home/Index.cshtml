@model AppUserSignInModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LogInLogOutLayout.cshtml";
}

<form asp-action="Giris" method="post" class="mt-5 w-50 mx-auto align-items-center p-4 shadow">
    <div class="form-group">
        <label asp-for="UserName"></label>
        <span asp-validation-for="UserName" class="text-danger"></span>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-check">
        <input type="checkbox" asp-for="RememberMe" class="form-check-input"/>
        <label asp-for="RememberMe" class="form-check-label"></label>
    </div>
    <a asp-action="Login" class="btn btn-warning">Register</a>
    <input type="submit" class="btn btn-info" value="Log In"/>

</form>

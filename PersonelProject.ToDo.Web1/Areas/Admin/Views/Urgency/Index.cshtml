@model List<UrgencyListViewModel>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



@if (Model.Count != 0)
{<a asp-action="AddUrgency" asp-controller="Urgency" class="btn btn-warning my-2">Add Urgency</a>

    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th>
                    Definition
                </th>
                <th>
                    Process
                </th>


            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Definition</td>
                    <td>
                        <a asp-action="UpdateUrgency" asp-controller="Urgency" 
                           asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    </td>
                </tr>
            }


        </tbody>

    </table>


}
else
{
    <div class="text-center lead mt-4 ">
        <p class="lead">
            You do not have any registration in the system.
        </p>
        <a asp-action="AddUrgency" asp-controller="Urgency" class="btn btn-warning my-2">Add Urgency</a>
    </div>
}


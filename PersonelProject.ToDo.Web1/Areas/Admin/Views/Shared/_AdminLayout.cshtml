@{ 
    string active = string.Empty;
    if (TempData["Active"] != null)
    {
        active = TempData["Active"].ToString();

    }

}


<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Staff Application</title>

    <!-- Bootstrap core CSS -->

    <link href="~/lib/bootswatch/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/lib/Theme-css/simple-sidebar.css" rel="stylesheet" />
    <link href="~/lib/front/css/all.min.css" rel="stylesheet" />

</head>

<body>

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">Admin </div>
            <div class="list-group list-group-flush">
                <a asp-action="Index" asp-controller="Mission" class="list-group-item list-group-item-action 
                   @(active=="mission"?"active":"") "><i class="fas fa-tasks mr-2"></i>Mission Operations</a>
                <a asp-action="Index" asp-controller="Urgency" class="list-group-item list-group-item-action
                   @(active=="urgency"?"active":"") "><i class="fas fa-exclamation mr-2"></i>Urgency Operations </a>
                <a asp-action="Index" asp-controller="WorkOrder" class="list-group-item list-group-item-action
                   @(active=="workorder"?"active":"")"><i class="fas fa-user-tie mr-2"></i>Mission Assignment Process</a>
                
                <a asp-area="" asp-action="LogOut" asp-controller="Home" class="list-group-item list-group-item-action "><i class="fas fa-sign-out-alt mr-2"></i>Log Out</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-outline-primary" id="menu-toggle"><i class="fas fa-book-open mr-2"></i>Menu</button>
            </nav>

            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
        

    </div>
    <!-- /#wrapper -->
    <!-- Bootstrap core JavaScript -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/front/js/all.min.js"></script>
    @RenderSection("JavaScript", false)
    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });</script>

</body>

</html>
